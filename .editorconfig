# Editorconfig.org
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# Markdown settings
[*.md]
trim_trailing_whitespace = false
indent_size = 4
max_line_length = 80

# Go settings
[*.go]
indent_style = tab
indent_size = 4

# Python settings
[*.py]
indent_size = 4
max_line_length = 88

# Git commit messages
[{COMMIT_EDITMSG,MERGE_MSG}]
max_line_length = 80

